function getCookie(nombreCookie){
	var data=document.cookie;
	var completo=data.split(";");
	var bandera=false;
	var partes=new Array();
	for(var i=0;i<completo.length;i++){
		partes[i]=completo[i].split("=");
	}
	for(i=0;i<partes.length;i++){
		if(partes[i][0].indexOf(nombreCookie)!=-1){
		return(partes[i][1]);
		bandera=true;
		}
	}
	if(!bandera){
		//alert("Â¡Nombre de cookie errado!");
	}
}

function guardar(){
	var n = 1;
	while(true){
		var obj = document.getElementsByName("p"+n);

		if(obj == undefined || obj == null || !obj){
			break;
		}else{
			if(obj[0].type.toLowerCase() == "radio"){
				document.cookie="p"+n+"="+getRadioButtonSelectedValue(obj);
			}else if(obj[0].type.toLowerCase() == "checkbox"){
				document.cookie="p"+n+"="+getCheckBoxSelectedValues(obj);
			}
			n++;
		}
	}
	
	return true;
}